<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MyStore Automation Suite">
  <!-- Need to mention listeners tag in the suite then only testng will invoke the methods in the listeners class -->
   <listeners>
	  <listener class-name="com.mystore.qa.listeners.MyListeners">
	  </listener>
  </listeners> 
 
  <test name="My Store TestCases">
    <classes>
	  <class name="com.mystore.qa.testcases.RegisterTest"/>
      <class name="com.mystore.qa.testcases.LoginTest"/>
      <class name="com.mystore.qa.testcases.SearchTest"/>

    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
